<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ElleleTextView">
        <attr name="removeSpaceFrontOfText" format="boolean" />
        <attr name="headDrawable" format="reference" />
        <attr name="headDrawablePaddingRight" format="dimension" />
        <attr name="headDrawableVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="enableEllipsize" format="boolean" />
    </declare-styleable>

</resources>
